<MudPopoverProvider />

<MudCalendar T="CalendarItem" 
             ShowDatePicker="true" 
             @bind-CurrentDay="@_currentDay" 
             DatePickerMinDate="@_minDate" 
             DatePickerMaxDate="@_maxDate" 
             PrevButtonDisabled="@_prevButtonDisabled" 
             NextButtonDisabled="@_nextButtonDisabled" 
             DateRangeChanged="OnDateRangeChanged" />

@code {

    public static string __description__ = "Prev/Next Buttons Disabled Test";

    private DateTime _currentDay = new DateTime(2025, 2, 12);
    private DateTime? _minDate = new DateTime(2024, 1, 1);
    private DateTime? _maxDate = new DateTime(2026, 12, 31);
    private bool _prevButtonDisabled;
    private bool _nextButtonDisabled;

    private void OnDateRangeChanged(DateRange range)
    {
        _prevButtonDisabled = range.Start <= _minDate;
        _nextButtonDisabled = range.End >= _maxDate;
    }
}
